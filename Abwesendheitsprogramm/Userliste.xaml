<Window x:Class="Abwesendheitsprogramm.Userliste"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Abwesendheitsprogramm"
        mc:Ignorable="d"
        Title="Userliste" Height="340" Width="420" ResizeMode="CanMinimize">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Height="227" Margin="10,10,0,0" VerticalAlignment="Top" Width="400" Name="CustomerGrid" ItemsSource="{Binding}" AlternatingRowBackground="LightGray" AlternationCount="2" Grid.Row="5" Grid.Column="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding name}" />
                <DataGridTextColumn Header="Ist abwesend" Binding="{Binding istAbwesend}" />
                <DataGridTextColumn Header="Ist abwesend seit" Binding="{Binding abwesendSeit}" />
                <DataGridTextColumn Header="Ist abwesend bis" Binding="{Binding abwesendBis}" />

            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Speichern" HorizontalAlignment="Left" Margin="140,260,0,0" VerticalAlignment="Top" Width="140" Height="40"/>

    </Grid>
</Window>
